    <ListPreference android:entries="@array/pref_subtitle_bottom_distances" android:title="@string/pref_subtitle_bottom" android:key="prefSubtitlesDistance" android:defaultValue="30" android:positiveButtonText="@null" android:negativeButtonText="@null" android:entryValues="@array/pref_subtitle_bottom_distances" />
    <PreferenceCategory android:title="@string/pref_category_subtitles_providers" />
    <SwitchPreference android:title="@string/pref_subtitle_OPENSUBTITLES" android:key="pref_subtitle_OPENSUBTITLES" android:defaultValue="true" />
    <SwitchPreference android:title="@string/pref_subtitle_TVSUBS" android:key="pref_subtitle_TVSUBS" android:defaultValue="true" />
    <SwitchPreference android:title="@string/pref_subtitle_LEGENDASDIVX" android:key="pref_subtitle_LEGENDASDIVX" android:defaultValue="true" />
    <EditTextPreference android:title="@string/pref_ldivx_username" android:key="prefLegendasDivxUsername" />
    <EditTextPreference android:title="@string/pref_ldivx_password" android:key="prefLegendasDivxPassword" android:inputType="textPassword" />
</PreferenceScreen>